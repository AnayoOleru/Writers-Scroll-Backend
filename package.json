{
  "name": "hermes-ah-backend",
  "version": "1.0.0",
  "description": "Authors Haven - A Social platform for the creative at heart. =======",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node dist/app.js",
    "build": "babel server -d dist",
    "migrate": "sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo:all",
    "seed": "sequelize db:seed:all",
    "start:dev": "npm run migrate && nodemon server/app.js --exec babel-node",
    "eslint:check": "node_modules/eslint/bin/eslint.js \"server/**/*.js\"",
    "prettier:check": "prettier --check \"./server/**/*.js\" && prettier --check \"./tests/**/*.js\"",
    "prettier:fix": "prettier --write \"./server/**/*.js\" && prettier --check \"./tests/**/*.js\"",
    "check:lint-prettier": "npm run eslint:check && npm run prettier:check",
    "pretest": "npm run check:lint-prettier"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela/hermes-ah-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andela/hermes-ah-backend/issues"
  },
  "homepage": "https://github.com/andela/hermes-ah-backend#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "nodemon": "^1.18.10",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "prettier": "1.16.4",
    "swagger-ui-express": "^4.0.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "pg": "^7.9.0",
    "sequelize": "^5.2.1",
    "yarn": "^1.15.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
